<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#FFFF00"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:max="5" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="60dp"
            android:text="0"
            android:textColor="#000000" />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/maria"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_margin="10dp"
        android:background="@drawable/rectangle"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <TextView
            android:id="@+id/iv_A"
            android:text="Maria Ozawa"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/oval"/>
        <TextView
            android:id="@+id/iv_B"
            android:text="Yui Hatano"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/iv_A"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/oval"/>
        <TextView
            android:id="@+id/iv_C"
            android:text="Tsubomi"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/iv_A"
            android:background="@drawable/oval"/>
        <TextView
            android:id="@+id/iv_D"
            android:text="Anri Okita"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_toRightOf="@+id/iv_C"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/iv_B"
            android:background="@drawable/oval"/>
    </RelativeLayout>
</LinearLayout>